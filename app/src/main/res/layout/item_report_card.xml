<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="Event Banner"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvInterested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interested: 0"
        android:paddingTop="4dp"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tvRSVP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RSVP Count: 0"
        android:paddingTop="2dp"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tvLikedArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Artist: -"
        android:paddingTop="2dp"
        android:textColor="#555555" />


    <TextView
        android:id="@+id/tvTotalLikes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Likes (Top Artist): 0"
        android:paddingTop="2dp"
        android:textColor="#800080" />

    <TextView
        android:id="@+id/tvVisitors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visitors: -"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:textColor="#555555" />

</LinearLayout>
